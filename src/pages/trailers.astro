---
import Layout from "../layouts/Layout.astro";
import { obras } from "../utils/getObras";

const obrasConTrailer = obras.filter( obra => obra.trailer );
---


<Layout title="Alex leira">
	<div class="trailers">
		<h2 class="title">
			Trailers
		</h2>

		<div class="grid">
			{ obrasConTrailer.map( obra =>
				 <div class="card">
					<h3>
						{ obra.title }
					</h3>

					<iframe class="video" width="560" src={obra.trailer} title="YouTube video player" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
					
				</div>
			 ) }
			
		</div>
	</div>
</Layout>

<style>
	.card {
		background: #fff;
		padding: 30px;
		border-radius: 16px;
	}

	.trailers {
		padding: 60px;
	}

	.card h3 {
		text-transform: uppercase;
		font-size: 38px;
		text-align: center;
		font-family: "Open Sans", sans-serif;
		margin: 15px;
	}

	.card .video {
		width: 100%;
		height: 600px;
		outline: none;
		border: none;
		/* aspect-ratio: 1/2; */
	}

	@media (max-width: 710px) {
		.trailers {
			padding: 25px;
		}

		.card h3 {
			font-size: 26px;
		}
		.card .video {
			height: 300px;
		}
	}
</style>